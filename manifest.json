{
  "manifest_version": 3,
  "name": "Bloom Scroll: filter out cringe content on your LinkedIn feed using AI",
  "author": "Ranjan Lamichhane",
  "version": "1.0.0",
  "description": "AI-powered Chrome extension that filters cringe, clickbait & low-value posts from your LinkedIn and X feed in real-time.",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.linkedin.com/feed/*",
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "action": {
    "default_popup": "./pages/popup.html",
    "default_title": "Bloom Scroll"
  },
  "options_page": "./pages/settings.html",
  "permissions": ["storage"]
}
